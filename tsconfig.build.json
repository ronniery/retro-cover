{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./src/",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node", "jest-extended", "cheerio"]
  },
  "include": ["src/**/*.ts", "testSetup.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.mock.ts",
    "src/**/*.integration.test.ts",
    "src/types.ts",
    "node_modules",
    "testSetup.ts"
  ]
}
